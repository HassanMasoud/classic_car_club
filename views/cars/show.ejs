<h1><%=car.make%> <%=car.model%></h1>
<img src="<%=car.image%>" alt="" width="300px" height="200px" />
<p><%=car.description%></p>
<%car.comments.forEach(comment => { %>
<p><strong><%=comment.author%></strong> - <%=comment.text%></p>
<% })%>
<a class="btn btn-success" href="/cars/<%=car._id%>/comments/new"
  >Add Comment</a
>

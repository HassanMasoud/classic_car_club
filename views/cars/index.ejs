<%-include('../partials/header')%>
<div class="container">
  <header
    class="jumbotron"
    style="background-image: url(https://images.pexels.com/photos/919073/pexels-photo-919073.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260); background-size: cover; color: white;"
  >
    <div class="container">
      <h1>Classic Car Club</h1>
      <p>Connect with vintage car lovers from across the world</p>
      <a href="/cars/new" class="btn btn-primary btn-large">Add Your Own Car</a>
      <p></p>
    </div>
  </header>

  <div class="row text-center d-flex" style="flex-direction: row;">
    <% cars.forEach(car => { %>

    <div class="col-lg-3 col-md-4 col-sm-6 mb-3">
      <a href="/cars/<%=car._id%>">
        <div class="card h-100 car-wrapper">
          <img
            src="<%=car.image%>"
            alt=""
            class="card-img-top img-fluid car-show"
          />
          <!-- <div class="card-body">
              <h4 class="card-text"><%= car.model%></h4>
            </div> -->
        </div>
      </a>
    </div>

    <% }) %>
  </div>
</div>

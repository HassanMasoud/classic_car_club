<%-include('../partials/header')%>
<div class="container">
<div class="row" style="display: flex; flex-direction: column">
  <h1 class="text-center">Edit <%=car.make%> <%=car.model%></h1>
  <div style="min-width: 30%; margin: 25px auto;">
    <form action="/cars/<%=car._id%>?_method=PUT" method="POST">
      <div class="form-group">
        <input
          class="form-control"
          type="text"
          placeholder="make"
          name="car[make]"
          value="<%=car.make%>"
        />
      </div>
      <div class="form-group">
        <input
          class="form-control"
          type="text"
          placeholder="model"
          name="car[model]"
          value="<%=car.model%>"
        />
      </div>
      <div class="form-group">
        <input
          class="form-control"
          type="text"
          placeholder="image url"
          name="car[image]"
          value="<%=car.image%>"
        />
      </div>
      <div class="form-group">
        <input
          class="form-control"
          type="text"
          placeholder="description"
          name="car[description]"
          value="<%= car.description %>"
        ></input>
      </div>

      <button class="btn btn-large btn-primary btn-block">Submit</button>
    </form>
    <a href="/cars/<%=car._id%>">Go Back</a>
  </div>
</div>
</div> 
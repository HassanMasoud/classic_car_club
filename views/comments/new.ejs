<div class="row" style="display: flex; flex-direction: column">
  <h1 class="text-center">Add a comment to <%=car.make%> <%=car.model%></h1>
  <div style="min-width: 30%; margin: 25px auto;">
    <form action="/cars/<%=car._id%>/comments" method="POST">
      <div class="form-group">
        <input
          class="form-control"
          type="text"
          placeholder="text"
          name="comment[text]"
        />
      </div>
      <div class="form-group">
        <input
          class="form-control"
          type="text"
          placeholder="author"
          name="comment[author]"
        />
      </div>
      <button class="btn btn-large btn-primary btn-block">Submit</button>
    </form>
    <a href="/cars/<%=car._id%>">Go Back</a>
  </div>
</div>
